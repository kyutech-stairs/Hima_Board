<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <%= "名前" %>
        <textarea name="name"><%= @post.name %></textarea>
        <%= "setTime" %>
        <input type="time" name="limit" value="<%= @post.limit.strftime('%H:%M') %>" >
        <%= "目的" %>
        <textarea name="purpose"><%= @post.purpose %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>