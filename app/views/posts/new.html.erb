<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
  </div>
  <%= form_for(@post) do |f| %>
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
        <% end %>
          
        
        <<label class="control-label" for="">setTime</label>
        <%= f.datetime_select :limit, {}, class: 'form-control' %>>
        <%= "目的" %>
        <%= f.text_area :purpose, placeholder: "目的" %>
        <%= f.submit "投稿", class: "btn btn-primary" %>
      
        
      </div>
    </div>
  
  <% end %>
</div>