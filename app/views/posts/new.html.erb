<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
  </div>
  <%= form_tag("/posts/create") do %>
  <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
        
        <%= "名前" %>
        <textarea name="name"><%= @post.name %></textarea>
        <%= "setTime" %>
        <input type="time" name="limit"  >
        <%= "目的" %>
        <textarea name="purpose"><%= @post.purpose %></textarea>
        <input type="submit" value="投稿">
      
        
      </div>
    </div>
  <% end %>
</div>