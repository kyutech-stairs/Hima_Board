<!DOCTYPE html>
<html>
  <head>
    <title>HimaBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
  <div class="header-logo">
    <%= link_to("HimaBoard","/posts/index") %>
  </div>
  <ul class="header-menus">
    <li>
      <%= link_to("新規投稿","/posts/new") %>&nbsp;<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    </li>
  </ul>
</header>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

    

    <%= yield %>
    
    <%= debug(params) if !Rails.env.development? %>
    
    
  </body>
</html>
